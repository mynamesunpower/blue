package main.java.controller;

import java.io.InputStream;
import java.io.OutputStream;
import java.net.InetSocketAddress;
import java.net.Socket;
import java.nio.ByteBuffer;
import java.nio.ByteOrder;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller
public class PythonSocketController {

	@RequestMapping(value = "chat.do") 
	public String chat() {
		System.out.println("chat 뷰 요청");
		return "chat";
	}
	
	@RequestMapping(value = "adminChat.do") 
	public String adminChat() {
		System.out.println("adminChat 뷰 요청");
		return "admin";
	}
	
	@RequestMapping(value = "connect.do")
	public String connectPython(Model model) {
		
		try (Socket client = new Socket()) {
			
			InetSocketAddress ipep = new InetSocketAddress("127.0.0.1", 8888);
			client.connect(ipep);
			
			try (OutputStream sender = client.getOutputStream(); InputStream receiver = client.getInputStream();) {
				
				for (int i = 0; i < 10; i++) {
					String msg = "java test message - " + i;
					byte[] data = msg.getBytes();
					ByteBuffer b = ByteBuffer.allocate(4);
					b.order(ByteOrder.LITTLE_ENDIAN);
					b.putInt(data.length);
					sender.write(b.array(), 0, 4);
					sender.write(data);
					
					data = new byte[4];
					receiver.read(data, 0, 4);
					ByteBuffer c = ByteBuffer.wrap(data);
					c.order(ByteOrder.LITTLE_ENDIAN);
					int length = b.getInt();
					data = new byte[length];
					receiver.read(data, 0, length);
					
					msg = new String(data, "UTF-8");
					System.out.println(msg);
				}
				
			}
			
		} catch (Exception e) {
			// TODO: handle exception
		}
		
		return "chat";
	}
	
}
