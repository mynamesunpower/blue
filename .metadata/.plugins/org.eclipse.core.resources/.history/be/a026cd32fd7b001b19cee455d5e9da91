<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="memberMapper">

<!-- 멤버 테이블 불러오기 --> 
<select id='selectMember' resultType="member">

	 SELECT * 
	 FROM member
	 
</select>

<!-- 회원가입 -->
<insert id="memberJoin" parameterType="member">

     INSERT INTO member   (id, 	 password, 	 name, 	 tel, 	 address, 	email,	 birthday)
     VALUES 			(#{id},#{password},#{name},#{tel}, #{address},#{email}, #{birthday})
     
</insert>

<!-- 관리자 회원추가 -->
<insert id="insertmember" parameterType="member">

     INSERT INTO member   (id,	password, name, 	 tel, 	 address, 	email,	 birthday)
     VALUES 			(#{id},	1, #{name}, #{tel}, #{address},#{email}, #{birthday})
     
</insert>

<!-- 관리자 회원정보 수정 -->
<update id="modifyMember" parameterType="member">

	UPDATE member 
	SET id = #{id}, password = 1, name = #{name},  address = {address}, email = #{email}, birthday = #{birthday}

     
</update>>




<!-- 로그인 -->
<select id="login" parameterType="member" resultType="member">
	 SELECT *
	 FROM member
	 WHERE id = #{id}
</select>



<select id="idCheck" parameterType="member" resultType="member">

     SELECT * 
     FROM MEMBER
     WHERE id = #{id}
     
</select>


</mapper>